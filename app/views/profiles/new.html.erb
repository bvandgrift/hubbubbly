<div class="content">
<h1>Create Your Profile</h1>

<% form_for(@profile, :url => user_profile_path(current_user), :html => { :multipart => true }) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :bio %><br />
    <%= f.text_area :bio %>
  </p>
  <p>
    <%= f.label :twitter %><br />
    @<%= f.text_field :twitter %>
  </p>
  <p>
    <%= f.label :avatar %><br />
    <%= f.file_field :avatar %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>
</div>